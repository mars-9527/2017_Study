<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  
<mapper namespace="cn.helloan.mapper.PersonMapper">

	<insert id="add" parameterType="cn.helloan.entity.Person">
		insert into tbl_person(name,age,birth,registerTime,salary)
		values(#{name},#{age},#{birth},#{registerTime},#{salary})
	</insert>
	
	<delete id="delete" parameterType="Integer">
		delete from tbl_person where id=#{id}
	</delete>
	
	<update id="update" parameterType="cn.helloan.entity.Person">
		update tbl_person 
		set name=#{name},age=#{age},birth=#{birth},registerTime=#{registerTime},salary=#{salary}
		where id=#{id}
	</update>
	
	<select id="getPersonById" parameterType="Integer" resultType="cn.helloan.entity.Person">
		select id,name,age,birth,registerTime,salary from tbl_person where id=#{id}
	</select>
	
	<select id="getAll" resultType="cn.helloan.entity.Person">
		select * from tbl_person
	</select>
	
	
</mapper>